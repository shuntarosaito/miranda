<html>
<head>
  <meta charset="UTF-8" />
  <link rel="stylesheet" href="style.css">
  <title>Miranda</title>
</head>

<%= form_for (@company) do |f| %>
  <div style="margin: 8px 0">
    <%= f.text_field :name, placeholder: "会社名を入力してください" %>
  </div>
   <div style="margin: 8px 0">
    <%= f.text_area :comment, placeholder: 'コメントを書いてください', style: 'width: 30%;height: 100px;' %>
          </div>
  <div class="row">
    <div class="col10 push1">
      <%= button_tag type: "submit", class: "btn btn--block" do %>
        投稿する<i class="icon-arrow-right"></i>
      <% end %>
    </div>
  </div>
<% end %>